    <color name="accent_purple_dark">#7B4FDF</color>
    <color name="background_dark">#0D0D1A</color>
    <color name="black">#000000</color>
    <color name="card_background">#1A1A2E</color>
    <color name="card_insight">#2D1B4E</color>
    <color name="chart_bar_bg">#2A2A40</color>
    <color name="chart_bar_high">#F87171</color>
    <color name="chart_bar_low">#4ADE80</color>
    <color name="chart_bar_medium">#FBBF24</color>
    <color name="gradient_end">#764BA2</color>
    <color name="gradient_start">#667EEA</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="stress_high">#F87171</color>
    <color name="stress_low">#4ADE80</color>
    <color name="stress_medium">#FBBF24</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
