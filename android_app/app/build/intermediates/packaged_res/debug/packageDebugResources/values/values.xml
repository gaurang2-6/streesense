    <string name="accessibility_service_description">Monitors typing speed and error rates to detect stress patterns. No text content is stored.</string>
    <string name="app_name">StressDetect</string>
    <string name="notification_channel_description">Background stress monitoring</string>
    <string name="notification_channel_name">Stress Detection</string>
    <style name="Theme.StressDetection" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/accent_purple</item>
        <item name="colorPrimaryVariant">@color/accent_purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/accent_cyan</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/card_background</item>
        
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        
        <item name="android:windowLightStatusBar" ns1:targetApi="23">false</item>
    </style>
    <style name="Theme.StressDetection.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/accent_purple</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>